<div class="col-12">
    <div id="offer-content-carroussel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            {{#each images}}
            <div class="carousel-item {{#if isActive}}active{{/if}}">
                <img src="{{image}}" class="d-block" alt="...">
            </div>
            {{/each}}
        </div>
        <a class="carousel-control-prev" href="#offer-content-carroussel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#offer-content-carroussel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>        
</div>