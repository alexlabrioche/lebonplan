{{> nav}}
<div class="container">
    <div class="row submit-offer-box">
        <form action="/offers/submit" method="POST" class="submit-offer-content" enctype="multipart/form-data">

            <div class="form-group">
                <label for="exampleFormControlInput1">Titre de l'annonce :</label>
                <input type="text" name="title" class="form-control" placeholder="">
            </div>

            <div class="form-group">
                <label for="exampleFormControlTextarea1">Description :</label>
                <textarea class="form-control" name="description" rows="3"></textarea>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">€</span>
                </div>
                <input name="price" type="text" class="form-control" placeholder="Prix" aria-label="Username" aria-describedby="basic-addon1">
            </div>

            <div class="custom-file submit-offer-content-file-input submit mb-2">
                <input type="file" class="custom-file-input" name="image">
                <label class="custom-file-label" for="customFile">Photo :</label>
            </div>

            <div class="form-group mb-5">
                <label for="exampleFormControlSelect1">Ville :</label>
                <select name="city" class="form-control" id="exampleFormControlSelect1">
                <option>Paris</option>
                <option >Marseille</option>
                </select>
            </div>

            <button class="btn btn-outline-primary" type="submit" role="button">Déposer l'annonce</button>
        
        
        </form>
    </div>
{{> footer}}
</div>